{
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
